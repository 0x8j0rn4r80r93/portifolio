@page "/"

<PageTitle>Portifolio - Bjørnar Borge</PageTitle>

<div class="terminal-container">
    <div class="terminal">
        <div class="terminal-header">
            <div class="terminal-buttons">
                <span class="terminal-button close"></span>
                <span class="terminal-button minimize"></span>
                <span class="terminal-button maximize"></span>
            </div>
            <div class="terminal-title">Terminal</div>
        </div>
        <div class="terminal-body">
            <div id="output" class="terminal-output">
                <div class="welcome-text">
                    <p>Welcome to Bjørnar Borge's Portfolio Terminal [Version 1.0.0]</p>
                    <p>(c) @DateTime.Now.Year Bjørnar Borge. All rights reserved.</p>
                    <br/>
                    <p>Type '<span class="command-highlight">help</span>' for available commands.</p>
                    <br/>
                </div>
            </div>
            <div class="terminal-input-line">
                <span class="prompt">bjornar@@portfolio:~$</span>
                <input type="text" id="terminal-input" class="terminal-input" autofocus autocomplete="off" spellcheck="false" />
            </div>
        </div>
    </div>
</div>
